/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

/*轮播图的样式*/
.swiper {
  height:500px;
  width: 100%;
}
.swiper-image {
  height: 100%;
  width: 100%;
}
.slide-image{
   height: 100%;
  width: 100%;
}
/*中间三个小按钮的样式（上图下字）的效果*/
.btn{
  width: 130rpx;
  height: 130rpx;
  margin-top: 20rpx;
  background-color: white;
  color: #999999;
  border-radius: 0rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  font-size: 20rpx;
}
.btnImg{
  width: 50rpx;
  height: 50rpx;
}
.btn::after{
  border: 0;
}

/*横向布局  */
.layout_horizontal{
  height: 100rpx;
  /*flex布局中的必写的一句*/
  display: flex;
  /*row 横向  column 列表  */
  flex-direction: row;
}
/*实现公告栏的样式*/
.swiperpublic{
  border-top: 1px solid #ededed;
  border-bottom: 1px solid #ededed;
  margin-top:50rpx;
  height: 50rpx;
  width: 100%;
}
.publicFont{
  font-size: 26rpx;
  margin-left: 30rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.publicImage{
  display: flex;
  flex-direction: row;
}
.publicImageImage{
  width: 50rpx;
  height: 50rpx;
}
/*实现图文列表的格式*/
.post-container{
  display: flex;
  flex-direction: column;
  margin-top:10rpx;
  margin-bottom: 40rpx;
  background-color: #fff;
  border-bottom: 1px solid #ededed;
  border-top: 1px solid #ededed;
  padding-bottom: 5px;
}
.post-author-date{
  margin: 10 rpx 0 20rpx 10rpx;
}
.post-author{
  width: 60rpx;
  height: 60rpx;
  vertical-align: middle;
}
.post-date{
  margin-left: 20rpx;
  vertical-align: middle;
  margin-bottom: 5px;
  font-size: 26rpx;
}
.post-title{
  font-size: 34rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 10px;
  margin-left: 10px;
}
.post-image{
  width: 100%;
  height: 340rpx;
  margin: auto 0;
  margin-bottom: 15px;
}
.post-content{
  color: #666;
  font-size: 28rpx;
  margin-bottom: 20rpx;
  margin-left: 20rpx;
  letter-spacing: 2rpx;
  line-height: 40rpx;
}
.post-like{
  font-size: 20rpx;
  flex-direction: row;
  line-height: 16px;
  margin-left: 10px;
}
.post-likeAndCollectionImage{
  width: 16px;
  height: 16px;
  margin-right: 8px;
  vertical-align: middle;
}
.post-likeAndCollection-font{
  vertical-align: middle;
  margin-right: 20rpx;
}
/*这里是新闻与视频分页的标签栏*/
.labelNewsOrVideo{
  border-top: 1px solid #ededed;
  border-bottom: 1px solid #ededed;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}
.labelNewsOrVideoImageSize{
  width: 70rpx;
  height: 70rpx;
}
