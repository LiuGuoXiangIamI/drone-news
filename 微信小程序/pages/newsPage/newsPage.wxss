/* pages/newsPage/newsPage.wxss */
.post-container{
  display: flex;
  flex-direction: column;
  background-color: #fff;
  border-bottom: 1px solid #ededed;
  padding-bottom: 5px;
}
.post-title{
  font-size: 40rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 10px;
  margin-left: 10px;
  border-bottom: 1px solid #332d2d;
}
.post-author-date{
  margin: 10 rpx 0 20rpx 10rpx;
}
.post-author{
  width: 60rpx;
  height: 60rpx;
  vertical-align: middle;
}
.post-date{
  margin-left: 20rpx;
  vertical-align: middle;
  margin-bottom: 5px;
  font-size: 26rpx;
}
.post-image{
  width: 100%;
  height: 400rpx;
  margin: auto 0;
  margin-bottom: 15px;
}
.post-content{
  color: #666;
  font-size: 28rpx;
  margin-bottom: 20rpx;
  margin-left: 20rpx;
  letter-spacing: 2rpx;
  line-height: 40rpx;
  border-bottom: 1px solid #332d2d;
}
.post-like{
  font-size: 20rpx;
  flex-direction: row;
  line-height: 16px;
  margin-left: 10px;
  align-items: center;
}
.post-likeAndCollectionImage{
   width: 16px;
  height: 16px;
  margin-left: 8px;
}
.post-likeAndCollection-font{
  margin-right: 20rpx;
}
