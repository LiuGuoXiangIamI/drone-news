/* pages/mine/mine.wxss */
/*用户页*/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  background: #3a3335;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}
.userinfo-nickname {
  color: #fff;
  font-size: 30rpx;
}
/*工具栏*/
.tool{
  display: flex;
  flex-direction: row;
  align-items: center;
  width: 100%;
  height: 90rpx;
}
.navs{
  display: flex;
}
.nav-item{
  width: 25%;
  display: flex;
  align-items: center;
  flex-direction: column;
  padding: 20rpx;
}
.nav-item .nav-image{
  width: 40rpx;
  height: 40rpx;
  margin: 5rpx;
}
.nav-item text{
  margin-top: 20rpx;
  font-size: 25rpx;
  color: gray;
}
/*列表*/
.person-list{
  display: flex;
  flex-direction: column;
  align-items: left;
}
.list-item{
  display: flex;
  flex-direction: row;
  align-items: center;
  height: 80rpx;
}
.item-image{
  width: 40rpx;
  height: 40rpx;
  margin: 20rpx;
}
.item-test{
  color: gray;
  font-size: 25rpx;
  margin-left: 20rpx;
}
.person-line{
  width: 100%;
  height: 2rpx;
  background-color: lightgray;
  margin-left: 90rpx;
}
